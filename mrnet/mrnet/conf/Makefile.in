	    mrnet/conf/config.sub \
	    mrnet/conf/check_configuration \
	    mrnet/conf/check-up \
	    mrnet/conf/clean-up \
	    mrnet/conf/keystash

BACKUPDIR = /p/paradyn/development/darnold/mrnet-backups
tar:
	echo "Tarring $(files) =>  mrnet.`date +"%d_%b_%H-%M"`.tgz ..."
	cd ..; tar czf mrnet.`date +"%d_%b_%H-%M"`.tgz $(files)

