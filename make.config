IFLAGS          = -I. -I../.. 

ifdef USES_PVM
IFLAGS += -I/p/paradyn/packages/pvm3/include
endif

SUFFIX          = .C:sC

VPATH		= ../src:../../../lib/$(PLATFORM):/p/paradyn/lib/$(PLATFORM)

LIBDIR		= -L../../../lib/$(PLATFORM) -L/p//paradyn/lib/$(PLATFORM)
ifdef USES_PVM
LIBDIR += -L/p/paradyn/packages/pvm3/lib/$(PLATFORM)
endif

YFLAGS		= -d -y
YACC		= bison

.SUFFIXES: .I .c .C .o

DEST          = .

CFLAGS          = $(IFLAGS) -g -Wall -fexternal-templates

CC              = g++

.C.o:
	$(CC) -c $(CFLAGS) $<
