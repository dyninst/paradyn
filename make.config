IFLAGS          = -I. -I../.. 

ifdef USES_PVM
IFLAGS += -I/var/home/paradyn/packages/pvm3/include
endif

SUFFIX          = .C:sC

VPATH		= ../src:../../../lib/$(PLATFORM):/var/home/paradyn/lib/$(PLATFORM)

LIBDIR		= -L../../../lib/$(PLATFORM) -L/var/home/paradyn/lib/$(PLATFORM)
ifdef USES_PVM
LIBDIR += -L/var/home/paradyn/packages/pvm3/lib/$(PLATFORM)
endif

YFLAGS		= -d -y
YACC		= bison

.SUFFIXES: .I .c .C .o

DEST          = .

CFLAGS          = $(IFLAGS) -g -Wall

CC              = g++

.C.o:
	$(CC) -c $(CFLAGS) $<
