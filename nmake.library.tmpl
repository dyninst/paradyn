VPATH           = $(VPATH) ../src

!ifndef UNCOMMON_LINK
$(TARGET): $(OBJS)
	@rm -f $(TARGET)
	lib -out:$*.lib $(OBJS)
#	$(RANLIB) $(TARGET)

!ifdef TARGET2
$(TARGET2): $(OBJS2)
	@rm -f $(TARGET2)
	ar crv $(TARGET2) $(OBJS2)
	$(RANLIB) $(TARGET2)
!endif  # TARGET2
!endif  # UNCOMMON_LINK

!ifndef DEST
DEST            = $(TO_CORE)\..\lib\$(PLATFORM)
!endif

echo:
	echo $(OBJS)

clean:
	del *.obj *.h *.C *.lib $(TARGET)

!ifndef UNCOMMON_INSTALL
install: $(DEST)/$(TARGET)

$(DEST)/$(TARGET):  $(TARGET)
	copy $(TARGET) $(DEST)
#	$(RANLIB) $(DEST)/$(TARGET)

#
# definition for secondary library
#
!ifdef TARGET2
install: $(DEST)/$(TARGET2)

$(DEST)/$(TARGET2):  $(TARGET2)
	cp $(TARGET2) $(DEST)
	$(RANLIB) $(DEST)/$(TARGET2)
!endif
!endif      # ifndef UNCOMMON_INSTALL

