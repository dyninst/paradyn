{..\src\}.y.C:
	$(YACC) $(YFLAGS) $<
	del $@
	move y.tab.c $@

{..\src\}.y.obj:
	$(YACC) $(YFLAGS) $<
	del $@
	move y.tab.c $@
	$(CXX) $(CXXFLAGS) -c $<



