# 
# Common makefile template for paradynd.  This file is not intended to
# be a useful Makefile in isolation; instead, it should be included
# from within an architecture-specific Makefile.
#
# $Id: make.module.tmpl,v 1.29 1998/04/27 20:55:26 wylie Exp $
#

CFLAGS		     += $(TCLFRIENDLYWARNINGS)
CXXFLAGS	     += $(TCLFRIENDLYWARNINGS)
TFLAGS		     += $(TCLFRIENDLYWARNINGS)

TARGET	      = paradynd

VPATH	     += ../../paradynd/src:../../paradyn/h:../../dyninstAPI/src:\
		../../dyninstAPI/h

SRCS	     += ../src/association.C \
		../../dyninstAPI/src/ast.C \
		../src/comm.C \
		../src/context.C \
		../src/debugger.C \
		../src/dynrpc.C \
		../src/init.C \
		../../dyninstAPI/src/inst.C \
		../src/main.C \
		../src/metric.C \
		../src/internalMetrics.C \
		../src/costmetrics.C \
		../src/metricDefs-critPath.C \
		../src/perfStream-def.C \
		../src/perfStream.C \
		../../dyninstAPI/src/process.C \
		../src/resource.C \
		../../dyninstAPI/src/stats.C \
		../../dyninstAPI/src/symtab.C \
		../../dyninstAPI/src/util.C \
		../../dyninstAPI/src/sharedobject.C \
 		../src/mdl.C \
		../src/showerror.C \
		../../dyninstAPI/src/templates0.C \
		../../dyninstAPI/src/templates05.C \
		../../dyninstAPI/src/templates1.C \
		../src/templatesPD.C \
		../src/templatesIGEN.C \
		../src/hashTable.C \
		../../dyninstAPI/src/FunctionExpansionRecord.C \

ifdef INCLUDE_PVM_SUPPORT
SRCS	     +=	../src/pvm_support.C \
		../src/host_support.C \
		../src/task_support.C \
		../src/templatesPVM.C

CXXFLAGS	+= -DPARADYND_PVM
LIBS		+= $(PVM_LIB)
endif

ifdef USES_SHM_SAMPLING
SRCS 		+= ../src/fastInferiorHeap.C ../src/fastInferiorHeapHKs.C \
		   ../src/fastInferiorHeapMgr.C ../src/baseTable.C \
		   ../src/superTable.C ../src/superVector.C
CXXFLAGS	+= -DSHM_SAMPLING
TFLAGS		+= -DSHM_SAMPLING
CFLAGS		+= -DSHM_SAMPLING
endif

IGEN_GEN_SRCS = dyninstRPC.xdr.SRVR.C \
		dyninstRPC.xdr.C

IGEN_ISRCS    = dyninstRPC.I

LIBS		+= -lpdutil

ifdef CROSSCOMPILER
SYSLIBS		+= -liberty -lg++ -lstdc++ -lm
else
SYSLIBS         += -liberty
endif

IFLAGS       += -I../$(PLATFORM) -I../src

all:    $(TARGET)

templates0.o: ../../dyninstAPI/src/templates0.C
	$(CXX) $(TFLAGS) -c ../../dyninstAPI/src/templates0.C

templates05.o: ../../dyninstAPI/src/templates05.C
	$(CXX) $(TFLAGS) -c ../../dyninstAPI/src/templates05.C

templates1.o: ../../dyninstAPI/src/templates1.C
	$(CXX) $(TFLAGS) -c ../../dyninstAPI/src/templates1.C

templatesPD.o: ../src/templatesPD.C
	$(CXX) $(TFLAGS) -c ../src/templatesPD.C

templatesIGEN.o: ../src/templatesIGEN.C
	$(CXX) $(TFLAGS) -c ../src/templatesIGEN.C
