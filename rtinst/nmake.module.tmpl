# $Id: nmake.module.tmpl,v 1.7 2005/10/10 18:45:58 legendre Exp $
#

!ifndef TARGET
TARGET	      = libparadynRT.dll
!endif

MODCC         = $(CC)
MODCFLAGS     = $(CFLAGS)

SRCS		= $(SRCS) ../src/RTinst.c

OBJS		= $(OBJS) RTinst.obj

!ifdef USES_SHM_SAMPLING
CFLAGS	= $(CFLAGS) -DSHM_SAMPLING
!endif

all: $(TARGET)

#
# override standard link rule; libdyninst is not really a library or a program.
#
UNCOMMON_LINK= true

#$(TARGET): $(OBJS) $(DYNOBJS) $(LIBS)
#	$(LD) $(LDFLAGS) -out:$(TARGET) $(OBJS) $(LIBS)

#
# override standard install rule; provide a default DEST if not already set
#
!ifndef DEST
DEST		= $(TO_CORE)\$(LIBRARY_DEST)
!endif

UNCOMMON_INSTALL= true
install: $(DEST)/$(TARGET)

$(DEST)/libparadynRT.dll:       libparadynRT.dll
	$(CP) libparadynRT.dll $(DEST)
