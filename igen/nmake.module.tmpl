USES_FLEX = TRUE

TARGET	      = igen.exe

#SRCS 	     = $(SRCS) ../src/main.C \
#		parser.C \
#		scanner.C \
#		../src/interface_spec.C \
#	        ../src/templates-nt.C 

OBJS 		= main.obj parser.obj scanner.obj interface_spec.obj \
                        templates-nt.obj

LIBS 	     = $(LIBS) $(TO_CORE)\$(LIBRARY_DEST)\libpdutil.lib

SYSLIBS = $(FLEX_LIB)


all:	$(TARGET)

parser.obj:
	$(YACC) $(YFLAGS) ../src/$*.y
	$(RM) $*.C
	$(MV) y.tab.c $*.C
	$(CXX) $(CXXFLAGS) -I../src -c $*.C

scanner.obj:
	$(LEX) -t $(LFLAGS) ../src/$*.l >scanner.C
	$(CXX) $(CXXFLAGS) -I../src -c $*.C

