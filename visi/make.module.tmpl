TARGET	      = libvisi.a 

VPATH        += ../../visi/h

SRCS	     += ../src/datagrid.C \
		../src/error.C \
		../src/visualization.C 

IGEN_GEN_SRCS =	visi.xdr.SRVR.C \
		visi.xdr.C

IGEN_ISRCS    = visi.I

all: $(TARGET)

TFLAGS +=  $(USEFULWARNINGS) 
CXXFLAGS = $(TFLAGS) $(ALL_INLINE_DEFINES)
CFLAGS = $(TFLAGS) 
